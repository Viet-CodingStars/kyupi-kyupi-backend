# Example environment variables for kyupi-kyupi-backend
# Copy this file to .env and edit values for local development.

# APP_ENV: DEVELOPMENT | TESTING | PRODUCTION
APP_ENV=DEVELOPMENT

# PORT the server listens on (default 8080)
PORT=8080

# LOG_LEVEL: debug | info | warn | error
LOG_LEVEL=info

# Generic database URL (optional)
DATABASE_URL=

# Postgres (preferred: set POSTGRES_URL, otherwise components below will be used)
# Example full URL: postgres://user:pass@postgres:5432/kyupi
POSTGRES_URL=
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=kyupi
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_OPEN_CONNS=25
POSTGRES_MAX_IDLE_CONNS=25
POSTGRES_CONN_MAX_LIFETIME=30m

# MongoDB (preferred: set MONGODB_URL, otherwise host/port below will be used)
# Example: mongodb://mongo:27017
MONGODB_URL=
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USER=
MONGO_PASSWORD=
MONGO_DATABASE=kyupi
MONGO_AUTH_SOURCE=
MONGO_REPLICA_SET=
